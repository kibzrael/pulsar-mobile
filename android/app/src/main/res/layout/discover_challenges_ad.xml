<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/discover_challenges_ad_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF">


        <com.google.android.gms.ads.nativead.MediaView
            android:id="@+id/discover_challenges_ad_media"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_gravity="top"
            android:background="@drawable/gradient_background"
            android:scaleType="centerCrop" />


        <TextView
            android:id="@+id/discover_challenges_ad_attribution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#F19938"
            android:padding="4dp"
            android:text="Ad"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingVertical="15dp">

            <ImageView
                android:id="@+id/discover_challenges_ad_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginVertical="8dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/discover_challenges_ad_headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="15dp"
                android:layout_marginBottom="2dp"
                android:lines="1"
                android:maxLines="1"
                android:text="Headline"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/discover_challenges_ad_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="15dp"
                android:gravity="center"
                android:maxLines="2"
                android:text="Body\nMay be two lines"
                android:textAlignment="center"
                android:textColor="#9E9E9E"
                android:textSize="15sp" />

        </LinearLayout>
    </FrameLayout>

</com.google.android.gms.ads.nativead.NativeAdView>